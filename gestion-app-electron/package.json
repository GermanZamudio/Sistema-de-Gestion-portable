{
  "name": "gestion-app-electron",
  "version": "1.0.0",
  "author": "German Zamudio",
  "description": "Sistema de Gesti√≥n portable (Electron + Express + React)",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "npm run dev:root || npm run dev:local",
    "dev:root": "concurrently -k \"npm:renderer-dev-root\" \"npm:start:wait\"",
    "renderer-dev-root": "npm run dev --prefix ../renderer",
    "dev:local": "concurrently -k \"npm:renderer-dev-local\" \"npm:start:wait\"",
    "renderer-dev-local": "npm run dev --prefix ./renderer",
    "start:wait": "wait-on http://localhost:5173 && electron .",
    "build:renderer": "npm run build --prefix ../renderer || npm run build --prefix ./renderer",
    "dist": "npm run build:renderer && electron-builder"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "multer": "^2.0.1",
    "react-hook-form": "^7.60.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.2",
    "sharp": "^0.34.2",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^8.0.3"
  },
"build": {
  "directories": { "output": "C:/electron-builds/GestionApp" },
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**",
    "node_modules/sharp/**"
  ],
  "npmRebuild": true,
  "files": [
    "main.js",
    "preload.js",
    "routes/**",
    "helpers/**",         
    "db/**",
    "assets/**",
    "package.json"
  ],
  "extraResources": [
    { "from": "renderer/dist", "to": "renderer/dist" },
    { "from": "db", "to": "db" },
    { "from": "assets", "to": "assets" }
  ],
  "win": { "target": "portable" }
}

}
